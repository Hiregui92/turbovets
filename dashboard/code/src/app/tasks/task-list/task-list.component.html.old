<div class="p-6">
  <h2 class="text-2xl font-bold mb-4 text-gray-800 dark:text-gray-200">Tasks List</h2>

  <div class="space-y-4">
    <div *ngFor="let task of tasks" class="p-4 bg-white dark:bg-gray-800 shadow rounded-lg">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
        {{ task.title }}
      </h3>
      <p class="text-sm text-gray-600 dark:text-gray-400">{{ task.description }}</p>
      <span class="inline-block mt-2 px-3 py-1 text-xs font-medium rounded-full"
        [ngClass]="{
          'bg-gray-200 text-gray-800': task.status === 'To Do',
          'bg-blue-200 text-blue-800': task.status === 'In Progress',
          'bg-yellow-200 text-yellow-800': task.status === 'Review',
          'bg-green-200 text-green-800': task.status === 'Done'
        }">
        {{ task.status }}
      </span>
    </div>
  </div>
</div>

